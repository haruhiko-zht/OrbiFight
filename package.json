{
  "name": "orbifight",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:server": "npm run --workspace server dev",
    "dev:client": "npm run --workspace client dev",
    "dev": "concurrently -n server,client -c green,blue \"npm:dev:server\" \"npm:dev:client\"",
    "build:server": "npm run --workspace server build",
    "build:client": "npm run --workspace client build",
    "build": "npm run build:server && npm run build:client",
    "typecheck": "tsc -p server/tsconfig.json --noEmit && tsc -p client/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "concurrently": "^8.2.2"
  }
}
